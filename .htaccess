# Permitir peticiones POST de Evolution API
<Files "webhook_whatsapp.php">
    # Desactivar ModSecurity para este archivo
    <IfModule mod_security.c>
        SecRuleEngine Off
    </IfModule>
    
    # Permitir acceso desde cualquier origen
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "POST, GET, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, apikey"
</Files>

# Permitir archivos PHP de diagn√≥stico
<FilesMatch "\.(php)$">
    Order allow,deny
    Allow from all
</FilesMatch>